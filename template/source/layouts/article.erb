<% wrap_layout :layout do %>

<article>
  <header>
    <h1><%= yield_content(:title) || h(current_resource.title) %></h1>
    <%= partial("partials/article_info", locals: { article: current_resource }) %>
    <!-- render_toc(current_resource)  -->
  </header>

  <div class="content numbering_headings">
    <%= yield %>
  </div>

  <footer>
    <%= partial("partials/pager") %>

 
    <% if current_resource.data.series %>
    <div class="references">
      <div class="header">連載記事：<%=  current_resource.dir_name %></div>
      <ul>
      <% series[:related_articles].each {|res| %>
	<li>
	<% if res == current_resource %>
	<%= res.title %>
	<% else %>
	<%= link_to(res.title, res) %>
	<% end %>
	</li>
      <% } %>
      </ul>
    </div>
    <% end %>
  </footer>
</article>

<% end %>

