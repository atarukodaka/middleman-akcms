---
layout: layout
pagination:
  per_page: 10
---

<% title = "Tag: #{h(current_resource.locals[:name])}" %>
<% content_for :title do %>
<%= title %>
<% end %>

<h1><%= title %></h1>

<% if pagination %>
  <%= partial("partials/summary", locals: {articles: page_articles}) %>
  <%= partial("partials/pagination") %>
<% else %>
  <%= partial("partials/summary", locals: {articles: articles}) %>
<% end %>
