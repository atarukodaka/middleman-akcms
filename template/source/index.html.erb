<% type = :first_article # :summary %>

<% case type %>
<% when :first_article %>
<!-- show first article -->
<!--   set layout frontmatter as false -->
<%= akcms.articles.first.render(layout: :article) %>

<% else %>
<!-- show recent article summary -->
<!--   set layout frontmatter as layout -->
<%= partial("partials/article_summary", locals: {articles: (defined?(articles)) ? articles : akcms.articles.first(10)}) %>

<% end %>
